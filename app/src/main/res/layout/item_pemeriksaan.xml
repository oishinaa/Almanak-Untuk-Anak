<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="gone"
        android:id="@+id/lnlBlankSta" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:paddingHorizontal="2.5dp"
        android:background="@drawable/bg_corner_white"
        android:elevation="2.5dp"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="7.5dp"
            android:text=""
            android:id="@+id/txtPeriode" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2.5dp"
            android:text="Sudah"
            android:id="@+id/btnSudah" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2.5dp"
            android:text="Tunda"
            android:id="@+id/btnTunda" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="7.5dp"
            app:tint="@color/blue"
            android:src="@drawable/ic_check"
            android:id="@+id/imgCheck" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="-5dp"
        android:layout_marginBottom="5dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="2.5dp"
        android:background="@drawable/bg_corner_b_grey"
        android:textAlignment="center"
        android:textColor="@color/dark"
        android:text=""
        android:id="@+id/txtAlarm" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="gone"
        android:id="@+id/lnlBlankEnd" />

</LinearLayout>